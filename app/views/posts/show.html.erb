
<div class="card">
  <div class="card-header">
    <%= @post.title %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @post.body %></p>
      <footer class="blockquote-footer mb-3"><%= @post.created_at %></footer>
    </blockquote>
    <div class="btn-group" role="group">
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-warning" %>
        <%= button_to 'Delete', post_path(@post), method: :delete, class: "btn btn-outline-danger" %> 
    </div>
    
  </div>
</div>
